{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API Gateway",
      "program": "${workspaceFolder}/apps/api-gateway/src/main.ts",
      "args": [
        "${workspaceFolder}/apps/api-gateway/src/main.ts"
      ],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "api-gateway",
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "env": {
        "PORT": "8000",
        "NODE_ENV": "dev",
        "RABBIT_MQ_URI": "amqp://guest:guest@rabbitmq:5672/",
        "MICROSERVICE_URLS_CUSTOMER_SERVICE": "http://localhost:8002/",
        "MICROSERVICE_URLS_ORDER_SERVICE": "http://localhost:8001/",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Order Service",
      "program": "${workspaceFolder}/apps/order/src/main.ts",
      "args": [
        "${workspaceFolder}/apps/order/src/main.ts"
      ],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "order",
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "env": {
        "PORT": "8001",
        "NODE_ENV": "dev",
        "MONGODB_URI": "mongodb://localhost:27050/order",
        "RABBIT_MQ_URI": "amqp://guest:guest@localhost:5672/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Customer Service",
      "program": "${workspaceFolder}/apps/customer/src/main.ts",
      "args": [
        "${workspaceFolder}/apps/customer/src/main.ts"
      ],
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run-script",
        "start:debug",
        "customer",
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceRoot}",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "env": {
        "PORT": "8002",
        "NODE_ENV": "dev",
        "MONGODB_URI": "mongodb://localhost:27050/customer",
        "RABBIT_MQ_URI": "amqp://guest:guest@localhost:5672/"
      }
    },
  ],
  "compounds": [
    {
      "name": "Customer + Order",
      "configurations": [
        "Launch Customer Service",
        "Launch Order Service"
      ]
    },
    {
      "name": "Customer + API Gateway",
      "configurations": [
        "Launch API Gateway",
        "Launch Customer Service",
      ]
    },
    {
      "name": "Order + API Gateway",
      "configurations": [
        "Launch API Gateway",
        "Launch Order Service"
      ]
    },
  ]
}