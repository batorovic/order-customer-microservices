{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es2022",
    "rootDir": ".",
    "outDir": "/dist",
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@batuhan_kutluay-case/common": [
        "libs/common/src"
      ],
      "@batuhan_kutluay-case/common/*": [
        "libs/common/src/*"
      ],
      "@batuhan_kutluay-case/core": [
        "libs/core/src"
      ],
      "@batuhan_kutluay-case/core/*": [
        "libs/core/src/*"
      ]
    }
  }
}